exmap tabnext obcommand pane-relief:go-next
exmap tabprev obcommand pane-relief:go-prev
exmap closetab obcommand workspace:close
exmap reload_obsidian obcommand app:reload
exmap surround_double_quotes surround " "
exmap surround_single_quotes surround ' '
exmap surround_backtick surround ` `
exmap surround_brackets surround ( )
exmap surround_square_brackets surround [ ]
exmap surround_curly_brackets surround { }
exmap surround_superscript surround <sup> </sup>
exmap surround_subscript surround <sub> </sub>
exmap back obcommand app:go-back
exmap forward obcommand app:go-forward

set clipboard=unnamed

nmap j gjzz
nmap k gkzz
nmap H ^
nmap L $

nmap gt :tabnext
nmap gT :tabprev

nmap <c-d> 5j
nmap <c-u> 5k
nmap <c-c> :closetab
nmap <A-r> :reload_obsidian
nmap <C-i> :forward
nmap <C-o> :back

vmap " :surround_double_quotes
vmap ' :surround_single_quotes
vmap ` :surround_backtick
vmap b :surround_brackets
vmap ( :surround_brackets
vmap ) :surround_brackets
vmap [ :surround_square_brackets
vmap ] :surround_square_brackets
vmap { :surround_curly_brackets
vmap } :surround_curly_brackets
vmap ^ :surround_superscript
vmap _ :surround_subscript
